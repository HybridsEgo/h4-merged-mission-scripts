	if ( not f_objective_current_check(DEF_R_OBJECTIVE_HORSESHOE_SHIELD()) ) then
		thread( f_horseshoe_shield_action_start() );
		sleep_until( f_objective_current_check(DEF_R_OBJECTIVE_HORSESHOE_SHIELD()), 1 );
	end

