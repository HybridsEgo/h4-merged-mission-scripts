	if ( zoneset_current() <= S_ZONESET_TO_AIRLOCK_ONE_B ) then
	
		door_to_airlock_one_exit_maya->zoneset_auto_open_setup( S_ZONESET_TO_AIRLOCK_ONE_B, TRUE, TRUE, -1, S_ZONESET_TO_AIRLOCK_ONE_B, TRUE );
