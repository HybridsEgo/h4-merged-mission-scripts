	if ( not f_objective_current_check(DEF_R_OBJECTIVE_HORSESHOE_SHIELD()) ) then
		f_objective_set( DEF_R_OBJECTIVE_HORSESHOE_SHIELD(), TRUE, FALSE, FALSE, TRUE );
	end
	
